// snip the center 280*280 pixels
module Snipper (
    input logic     [12:0]          X_coord,
    input logic     [12:0]          Y_coord,
    output logic                    store
);
// define parameters
////	Horizontal Parameter	( Pixel )
parameter	X_START = 260;
parameter   X_END = 540;
parameter   Y_START = 160;
parameter   Y_END = 440;
    // logic block
always_comb begin
    if (X_coord >= X_START && X_coord <= X_END 
    && Y_coord >= Y_START && Y_coord <= Y_END)
    store = 1'b1;
end
endmodule